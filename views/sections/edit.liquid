{% layout 'layout.liquid' %}

{% block content %}
<div class="container-md">
    <form action="/fruits/{{section._id}}?_method=PUT" method="POST">
        <fieldset>
            <legend>Edit This {{section.name}}</legend>
            <label class="form-label">Name:</label>
            <input 
                type="text" 
                name="name" 
                placeholder="enter name" 
                class="form-control"
                value="{{section.name}}"
            >
            <label class="form-label">Color:</label>
            <input 
                type="text" 
                name="color" 
                placeholder="enter color"
                class="form-control"
                value="{{section.color}}"
            >
            <label class="form-label">Is Calculus?</label>
            <input 
                type="checkbox" 
                name="isCalculus" 
                class="form-check-input"
                {% if fruit.readyToEat %} 
                    checked
                {% endif %}
            >
        </fieldset>
        <div class="btn-group">
            <input type="submit" value="Edit {{ fruit.name }}" class="btn btn-success">
            <a href="/sections" class="btn btn-warning">Nevermind</a>
        </div>
    </form>
</div>
{% endblock %}